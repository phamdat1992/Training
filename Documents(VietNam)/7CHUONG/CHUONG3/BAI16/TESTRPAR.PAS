{  Test bai Tim kiem mau }
{$R+}
Uses  Crt;
Const
   inp: string = 'RPART.INP';
   out         = 'RPART.OUT';
   dapso: array['1'..'7'] of integer = (4,2,1,4,400,2,6);
Var
      F    : Text;
      d1   : longint;
      diem : real;
      chon : char;

Procedure Cham;
Var code: integer;
    s   : string;
Begin
    diem:=0;
    Assign(f,out); Reset(f);
    readln(f,s);
    close(f);
    while s[1]=' ' do delete(s,1,1);
    val(s,d1,code);
    if code<>0 then
    begin
       writeln('???????????????????????????????????????????????????');
       writeln('   ERROR: Loi file ket qua!');
       writeln('          Cai ghi o file: ', s);
       writeln('???????????????????????????????????????????????????');
       exit;
    end;
    if d1<>dapso[chon] then
    begin
       writeln; writeln;
       writeln('???????????????????????????????????????????????????');
       writeln('   ERROR: Sai dap so!');
       writeln('            Tim duoc: ', d1);
       writeln('            Dap so  : ',dapso[chon]);
       writeln('???????????????????????????????????????????????????');
       exit;
    end;
    if chon='1' then  diem:=1.0
    else diem:=1.5;
    writeln; writeln;
    writeln('       $$$$$$$$$$$$$$$$$$$$$$$$$$$$');
    writeln('               C O R R E C T!');
    writeln('       $$$$$$$$$$$$$$$$$$$$$$$$$$$$');
End;

Begin
   Clrscr;
   writeln('            ===========================================');
   writeln('                  CHUONG TRINH CHAM BAI RPART');
   writeln('            ===========================================');
   write  ('                  Cho ten file test: RPART.IN');
   chon:=readkey; writeln(chon);
   inp:= 'RPART.IN'+chon;
   Cham;
   writeln; writeln;
   writeln('            ====================================');
   writeln('                       Diem: ',diem:3:1);
   writeln('            ====================================');
   readln;
End.

